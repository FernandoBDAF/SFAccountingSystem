@model ICollection<User>
@{
	ViewData["Title"] = "Users";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">List of Users</h1>

            <a class="btn btn-primary mb-4" href="User/Create">New User</a>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Entity</th>
                        <th>CPF / CNPJ</th>
                        <th>Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(User user in Model)
                    {
                        <tr>
                            <td>user.Name</td>
                            <td>user.Entity</td>
                            <td>user.CpfCnpj</td>
                            <td>user.Type</td>
                            <td>
                                    <a class="btn btn-secondary" href="./Update/user.Id">Edit</a>
                                    <a class="btn btn-danger" href="./Delete/user.Id">Delete</a>
                            </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>
